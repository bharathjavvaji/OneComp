import java.util.*;

public class Main {
    public static void main(String[] args) {
      int[] nums={1,3,0,0,2,0,0,4};
      int res=0;
        int cnt=0;
         for(int num: nums) {
            if(num == 0) {
                cnt++;
                res += cnt;
            }
            else {
                cnt = 0;
            }
        }
      System.out.println(res);
    }
}
